[user]
    name = Ben D'Angelo
    email = ben@viafoura.com
[push]
    default = matching
[core]
    editor = vim
    exludesfile = ~/.gitignore
[color]
    ui = true
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[alias]
    # loggers

    # display a graph
    # view lines changes lg -p
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --decorate

    # list last commits
    l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate

    # not very useful
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat

    # display file changes
    ls = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status

    # display all commits today
    lt = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative

    # grep commit messages
    lgr = !sh -c 'git l --grep=$1 --max-count=10' - # search

    lf = log -p # changes of a file


    cp = cherry-pick

    pp = !git pull && git push

    # push new branch to remote
    pr = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
    p = push

    a = add -A
    unstage = reset HEAD --
    untrack = rm --cached --
    undelete = !git checkout $(git rev-list -n 1 HEAD -- "$1")^ -- "$1"

    s = status -sb

    c = commit -m
    ca = commit -am
    amend = commit --amend            # rename your last commit
    uncommit = reset HEAD^ # undos the last commit
    # deploy rails
    deploy = !git checkout master && git pull && git merge dev && git push && cap deploy
    # deploy npm package
    publish = !git checkout master && git pull && git merge dev && git push && npm publish

    # changing branches
    ch = checkout
    chb = checkout -b
    master = checkout master
    dev = checkout dev
    rc = checkout rc

    # dealing with branches
    b = branch
    br = branch -a
    rmb = !sh -c 'git branch -D $1 && git push origin :$1' - # remove branch from local and remote

    # diffs
    dlc = diff --cached HEAD^ #
    diff = diff --word-diff
    di = diff --cached # show what has changed but has not been added to the index yet via get add
    dc = diff HEAD # show what changed since last commit
    dl = diff HEAD^                 # show what has changed since the commit before the latest commit

    # reset file
    rf = checkout --

    # reset everything
    ra = reset --hard

    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = "!git ls-files -v | grep ^h | cut -c 3-"


    # random stuff
    who = shortlog -n -s --no-merges
    snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
    me = config user.name

    # display all aliases
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\t=> \\2/' | sort
    ignore=!([ ! -e .gitignore ] && touch .gitignore) | echo $1 >>.gitignore
    ignored = status --ignored
    conflicts = diff --name-only --diff-filter=U

    # remove dead remote branches, cleanup files, remove untracked files, clear stash
    cleanup = !git remote prune origin && git gc && git clean -df && git stash clear

[mergetool]
    prompt = false
