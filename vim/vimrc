set t_Co=256

set nocompatible              " be iMproved, required
filetype off                  " required
syntax on
"set mouse=a
set background=dark

" Auto indent
filetype indent on
filetype plugin indent on     " required

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/vundle/
call vundle#rc()
let mapleader=","
let g:solarized_termcolors=256

map <Leader>s :source $MYVIMRC<CR>
map <Leader>e :vs $MYVIMRC<CR>

set pastetoggle=<F10>
set number
set noswapfile
set autoindent
set hlsearch
set nobackup
set autoread
set laststatus=2
set ttimeoutlen=50
" a combination of spaces and tabs are used to simulate tab stops at a width
" other than the (hard)tabstop
set softtabstop=4
set smarttab
set expandtab
set tabstop=4
set shiftwidth=4

set complete=.,b,u,]

" gvim
if has('gui_running')
    set go-=T
    set guifont=Liberation\ Mono\ 9
    set go-=r
    set go-=L
endif

" let Vundle manage Vundle, required
Bundle 'gmarik/vundle'
Bundle 'tpope/vim-sensible'
Bundle 'jdonaldson/vaxe'
Bundle 'altercation/vim-colors-solarized'
Bundle 'plasticboy/vim-markdown'
Bundle 'tpope/vim-fugitive'
Bundle 'tpope/vim-rails.git'
Bundle 'scrooloose/nerdtree.git'
Bundle 'scrooloose/nerdcommenter'
Bundle 'jlanzarotta/bufexplorer'
Bundle 'L9'
Bundle 'Lokaltog/vim-easymotion'
Bundle 'groenewege/vim-less'
Bundle 'tpope/vim-surround'
Bundle 'kien/ctrlp.vim.git'
Bundle 'tomtom/tcomment_vim'
Bundle 'terryma/vim-multiple-cursors'
Bundle 'flazz/vim-colorschemes'
Bundle 'https://github.com/mileszs/ack.vim.git'

let g:ctrlp_custom_ignore = 'dist\|export\|node_modules\|DS_Store\|git'
let g:ctrlp_working_path_mode = 2
let g:ctrlp_max_depth = 5

" Shortcuts
map <C-k>b :NERDTreeToggle<CR>
imap jk <Esc>
" format the entire file
nmap <leader>fef ggVG=
map <silent><leader>t <leader>be<Down>t
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
noremap <tab> <c-w><c-w>
nnoremap <leader>l <C-^>

let g:ackprg = 'ag --nogroup --nocolor --column'

colorscheme default

" automatic formatting
autocmd BufWritePre *.slim :%s/\s\+$//e
autocmd BufWritePre *.rb :%s/\s\+$//e
autocmd BufWritePre *.hx :%s/\s\+$//e

au BufReadPost *.hxp set syntax=haxe
au BufReadPost *.hx set syntax=haxe

